@page
@model AspPix.Pages.IndexModel
@{
}

@using AspPix
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AspPix

<div>
    <script src="~/pix/js/file.js"></script>
    <div>
        <form id="form" method="get">
            <label>仅喜欢</label>
            <input type="checkbox" name="@nameof(Model.OnlyLive)" checked="@Model.OnlyLive"/>
            <input type="text" id="tag" name="@nameof(Model.Tag)" value="@Model.Tag" />
            <input type="button" id="reset" value="清除" />
            <input type="date" id="date" name="@nameof(Model.Date)" value="@Model.Date" />
            <input type="date" id="date2" name="@nameof(Model.Date2)" value="@Model.Date2" />
            <input type="number" id="down" name="@nameof(Model.Pages)" value="@Model.Pages" />
        </form>
        <button class="up">上一页</button>
        <button class="down">下一页</button>
    </div>
    <div>
        @foreach (var item in Model.ImgUris)
        {
            <a href="@item.Big" target="_blank"><my-img img-uri="@item.Small"></my-img></a>
        }
    </div>
    <div>
        <button class="up">上一页</button>
        <button class="down">下一页</button>
    </div>
</div>